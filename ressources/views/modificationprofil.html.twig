{% extends 'layout.html.twig' %}

{# Block de title défini dans base.html.twig #}
{% block title %} Espace Membre {% endblock %}

{# Block de Contenu défini dans base.html.twig #}
{% block contenu %}
        
        <div class="container">
            <div class="starter-template">
            	<h1>Modification du profil de {{ membre.prenom }} {{ membre.nom }}</h1>
            	{% if success is defined %}
            	{{ success }}
            	{% endif %}
            	<form class="form-horizontal" method="POST" enctype="multipart/form-data" >
            	<div class="form-group">
                	<label for="" class="col-md-3 control-label">
    					Nom Public : 
    				</label>
        				<div class="col-md-7">
                    	{{ form_row(form.pseudo) }}
                    	</div>
            	</div>
            	<div class="form-group">
                	<label for="" class="col-md-3 control-label">
    					Prenom : 
    				</label>
        				<div class="col-md-7">
                    	{{ form_row(form.prenom) }}
                    	</div>
            	</div>
            	<div class="form-group">
                	<label for="" class="col-md-3 control-label">
    					Nom : 
    				</label>
        				<div class="col-md-7">
                    	{{ form_row(form.nom) }}
                    	</div>
            	</div>
            	<div class="form-group">
                	<label for="" class="col-md-3 control-label">
    					Email : 
    				</label>
        				<div class="col-md-7">
                    	{{ form_row(form.email) }}
                    	</div>
            	</div>
            	<div class="form-group">
                	<label for="" class="col-md-3 control-label">
    					Adresse : 
    				</label>
        				<div class="col-md-7">
                    	{{ form_row(form.adresse) }}
                    	</div>
            	</div>
            	<div class="form-group">
                	<label for="" class="col-md-3 control-label">
    					Code Postal (Ville) : 
    				</label>
        				<div class="col-md-7">
                    	{{ form_row(form.codePostal) }}
                    	</div>
            	</div>
            	<div class="form-group">
                	<label for="" class="col-md-3 control-label">
    					Telephone Fixe : 
    				</label>
        				<div class="col-md-7">
                    	{{ form_row(form.telFixe) }}
                    	</div>
            	</div>
            	<div class="form-group">
                	<label for="" class="col-md-3 control-label">
    					Telephone Mobile : 
    				</label>
        				<div class="col-md-7">
                    	{{ form_row(form.telMobile) }}
                    	</div>
            	</div>
            	<div class="form-group">
				<label for="" class="col-md-3 control-label">
					Photo
				</label>
				<div class="col-md-7">
					{{ form_row(form.photo) }}
				</div>
			</div>
			{{ form_row(form._token) }}
			<div class="form-group">
				<label for="" class="col-md-3 control-label">
					
				</label>
				<div class="col-md-7">
					<input type="submit" class="btn btn-primary" value="Mettre à jour" />
				</div>
			</div>
			</form>	
           </div>
         </div>  
          <div class="container">
            	{% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <h1>Profil</h1>
                <p class="lead">{{ message }}</p>
                {% else %}
                <div class="alert alert-danger"><i class="fa fa-exclamation-circle" aria-hidden="true"></i>
                Vous devez être inscrit-e et/ou connecté-e pour accéder à cet espace <br />
                <b>Connexion</b> - <b>Inscription</b>
                </div>
                {% endif %}
          </div>
            	
            
        </div>
        <!-- /.container -->
    
{% endblock %}
{% block javascripts %}
{# Pour afficher le contenu intial du block javascripts sinon remplace par les nouveaux élements. Pour eviter ça il faut utiliser la fonction parent() #}
{{ parent() }}
<script src="//cdnjs.cloudflare.com/ajax/libs/Dropify/0.2.2/js/dropify.min.js"></script>
<script>
$('.dropify').dropify({
	messages: {
    default: 'Glissez-déposez un fichier ici ou cliquez',
    replace: 'Glissez-déposez un fichier ou cliquez pour remplacer',
    remove:  'Supprimer',
    error:   'Désolé, le fichier trop volumineux'
}
});
</script>
{% endblock %}