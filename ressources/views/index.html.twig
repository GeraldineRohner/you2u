{% extends "layout.html.twig" %}

{# Titre de la Page #}
{% block title %} Accueil | TechNews {% endblock %}

{# Fil d'Ariane #}
{% set active = 'accueil' %}

{# Contenu de la Page #}
{% block contenu %}

    <div class="row">
        <!--colleft-->
        <div class="col-md-8 col-sm-12">
            <div class="box-caption">
                
        
        <div class="container">
            <div class="starter-template">
            {% if global.request.get('inscription') == 'success' %}
            {% endif %}
                <h1>You2u</h1>
                
            </div>
            <!--spotlight-->
            <!--spotlight-thumbs-->
            <section class="spotlight-thumbs">
                <div class="row">
                    {% for service in services %}
                        <div class="col-md-4 col-sm-4 col-xs-12 border">
                            <div class="spotlight-item-thumb">
                                <div class="spotlight-item-thumb-img">
                               
                                    <a href="{{ url('index_annonce', {
                                        nomCategorieService : service.nomCategorieService | lower,
                                        slugService         : service.titreService | slug ,
                                        idService         : service.idService }) }}">
                                        {# <img alt="{{ service.titreService }}" src="{{ asset('img/img_user'~service.photo) }}"
                                             class="img-responsive"/>#}
                                    </a>
                                    <h5><a href="{{ url('index_categorie', {
                                        nomCategorieService : service.nomCategorieService | lower} ) }}" class="cate-tag">Cat√©gorie : {{ service.nomCategorieService }}</a></h5>
                                </div>
                                <h3><a href="{{ url('index_annonce', {
                                        nomCategorieService : service.nomCategorieService | lower,
                                        slugService         : service.titreService | slug ,
                                        idService         : service.idService }) }}">{{ service.titreService }}</a></h3>
                                <div class="meta-post">
                                    <a href="#">
                                        {{ service.pseudo }}
                                    </a>
                                    <em></em>
                                    <span>
                                    {{ service.datePublicationService|date("d/m/Y")  }}
                                </span>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </section>
        </div>
    </div>


    {# include 'inc/sidebar.html' #}
    {#    {{ render(controller('TechNews\\Controller\\NewsController::sidebar')) }}#}

{% endblock %}