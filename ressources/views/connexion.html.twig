{% extends 'layout.html.twig' %}

{# Block de title défini dans base.html.twig #}
{% block title %} Accueil {% endblock %}

{# Block de Contenu défini dans base.html.twig #}
{% block contenu %}

            <div class="row">
                <div class="col-md-6 col-md-push-3">
                    <h2 class="text-center"> Connexion </h2>

                    {% if error %}
                        <div class="alert alert-danger">
                            <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
                            {{ error | replace({"Bad credentials" : "Identifiant et/ou mot de passe incorrect"}) }}
                        </div>
                    {% endif %}

                    {% if global.request.get('inscription') == 'success' %}

                        <div class="alert alert-success">
                            <p class="text-center"><i class="fa fa-thumbs-up"></i> Félicitation votre inscription est effective.</p>
                            <p class="text-center">Vous pouvez vous connecter dès à présent.</p>
                        </div>

                    {% endif %}

                    <form action="{{ url('membre_login_check') }}" class="form-horizontal" method="POST">

                        <!-- Email -->
                        <div class="form-group">
                            <div class="col-md-6 col-md-push-3">
                                <input type="email" name="_username" value="{{ last_username }}" placeholder="Saisissez votre email" class="form-control" required>
                            </div>
                        </div>

                        <!-- Mot De Passe -->
                        <div class="form-group">
                            <div class="col-md-6 col-md-push-3">
                                <input type="password" name="_password" placeholder="********" class="form-control" required>
                            </div>
                        </div>

                        <!-- Bouton Submit -->
                        <div class="form-group">
                            <div class="col-md-2 col-md-push-3">
                                <input type="submit" class="btn btn-block btn-primary" value="Connexion">
                            </div>
                        </div>

                        <!-- Mot de passe perdu + Lien inscription -->
                        <div class="form-group">
                            <div class="col-md-5 col-md-push-3">
                                <a href="#" style="font-size:12px;"><u> Mot de passe perdu ? </u></a>
                            </div>
                            <div class="col-md-5 col-md-push-1">
                                <a href="#" style="font-size:12px;"><u> Pas encore de compte ? Inscrivez-vous </u></a>
                            </div>
                        </div>

                    </form>
                </div>
            </div>


{% endblock %}