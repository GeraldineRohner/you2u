<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="width=device-width, minimum-scale=0.25"/>
    <meta name="viewport" content="width=device-width, maximum-scale=5.0"/>
    {% block stylesheets %}{% endblock %}
</head>
<body>

    <!-- NavBar -->
    <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">You2u</a>
                </div>
                <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="{{ url('index_index') }}">Accueil</a></li>
                    <li><a href="#">Qui sommes-nous ?</a></li>
                    <li><a href="{{ url('index_recherche') }}">Rechercher une annonce</a></li>
                    <li><a href="{{ url('index_inscription') }}">Inscription</a></li>
                   {# <li><a href="{{ url ('index_categorie'}}">Cat√©gories</a></li>#}
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li><a href="{{ url('membre_index') }}">Profil</a></li>
                    <li><a href="{{ url('deconnexion') }}">Deconnexion</a></li>
                    {% else %}
                    <li><a href="{{ url('index_connexion') }}">Connexion</a></li>
                    {% endif %}

                    <li><a href="#">Contact</a></li>
                </ul>
                </div><!--/.nav-collapse -->
            </div>
        </nav>

        {% block contenu %}{% endblock %}


        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12 x-auto text-center">
                    <div class="footer">
                        <h4>
                            <img alt="Logo" src="{{ asset('img/logo.svg') }}" srcset="{{ asset('img/logo.png') }}" width="200" height="80">
                        </h4>
                        <p>34 rue Turbil
                            <br>69003 Lyon</p>
                        <ul class="list-unstyled">
                            <li>
                                <i class="fa fa-phone fa-fw"></i>
                                04 72 91 60 06</li>
                            <li>
                                <i class="fa fa-envelope-o fa-fw"></i>
                                <a href="mailto:name@example.com">you2u@gmail.com</a>
                            </li>
                        </ul>
                        <br>
                        <ul class="list-inline">
                            <li class="list-inline-item">
                                <a href="#">
                                    <i class="fa fa-facebook fa-fw fa-3x"></i>
                                </a>
                            </li>
                            <li class="list-inline-item">
                                <a href="#">
                                    <i class="fa fa-twitter fa-fw fa-3x"></i>
                                </a>
                            </li>
                        </ul>
                        <hr class="small">
                        <p class="text-muted">Copyright &copy; You2u 2017</p>
                    </div>
                    <a id="to-top" href="#top" class="btn btn-black btn-lg js-scroll-trigger">
                        <i class="fa fa-chevron-up fa-fw fa-1x"></i>
                    </a>
                </div>
            </div>
        </footer>
    <!-- Javascripts -->
    {% block javascripts %}{% endblock %}
    

</body>
</html>