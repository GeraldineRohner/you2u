<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="width=device-width, minimum-scale=0.25"/>
    <meta name="viewport" content="width=device-width, maximum-scale=5.0"/>
    <title>{% block title %}{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
</head>
<body>

        <div class="navbar navbar-default">
            <div class="row ">
                <div class="container">
                    <div class="col-md-12">
                        <nav>
                            <div class="navbar-header">
                                <button type="button" data-target="#navbarCollapse" data-toggle="collapse" class="navbar-toggle">
                                    <span class="sr-only">Toggle navigation</span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                            </div>
                            <div id="navbar" class="collapse navbar-collapse">
                                <ul class="nav navbar-nav">
                                    <li><a href="{{ url('index_index') }}">Accueil</a></li>
                                    {#<li><a href="{{ url('index_categories') }}">Catégories</a></li>#}
                                    <li><a href="{{ url('index_recherche') }}">Rechercher une annonce</a></li>
                                    <li><a href="{{ url('index_about') }}">Qui sommes-nous ?</a></li>
                                </ul>
                                <ul class="nav navbar-nav navbar-right">
                                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                        <li><a href="{{ url('membre_index') }}">Profil</a></li>
                                        <li><a href="{{ url('membre_contact') }}">Assistance</a></li>
                                        {% if is_granted('ROLE_ADMIN') %}
                                            <li><a href="{{ url('index_admin') }}">Administration</a></li>
                                        {% endif %}
                                    <li><a href="{{ url('deconnexion') }}">Deconnexion</a></li>
                                    {% else %}
                                        <li><a href="{{ url('index_connexion') }}">Connexion</a></li>
                                        <li><a href="{{ url('index_inscription') }}">Créer un compte</a></li>
                                    {% endif %}
                                </ul>
                            </div><!--/.nav-collapse -->
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        {% block contenu %}{% endblock %}

        <!-- Footer -->
        <footer class="container-fluid">
            <div class="row">
                <div class="col-lg-12 x-auto text-center">
                    <div class="footer">
                        <h4>
                            <img alt="Logo" src="{{ asset('themes/you2u/img/logo.svg') }}" srcset="{{ asset('themes/you2u/img/logo.svg') }}" width="200" height="80">
                        </h4>
                        <p>34 rue Turbil
                            <br>69003 Lyon</p>
                        <ul class="list-unstyled">
                            <li>
                                <i class="fa fa-phone fa-fw"></i>
                                04 72 91 60 06</li>
                            <li>
                                <i class="fa fa-envelope-o fa-fw"></i>
                                <a href="mailto:name@example.com">you2u@gmail.com</a>
                            </li>
                        </ul>
                        <br>
                        <ul class="list-inline">
                            <li class="list-inline-item">
                                <a href="#">
                                    <i class="fa fa-facebook fa-fw fa-3x"></i>
                                </a>
                            </li>
                        </ul>
                        <p class="text-muted">Copyright &copy; You2u 2017</p>
                    </div>
                    <a id="to-top" href="#top" class="btn btn-inverse btn-lg js-scroll-trigger">
                        <i class="fa fa-chevron-up fa-fw fa-1x"></i>
                    </a>
                </div>
            </div>
        </footer>

    <!-- Javascripts -->
    {% block javascripts %}{% endblock %}

</body>
</html>
